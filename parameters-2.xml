      <entry name="{{ vrouter-name }}">
        <protocol>
          <ospf>
            <enable>{{ enable-ospf }}</enable>
            <router-id>{{ router-id }}</router-id>
            <allow-redist-default-route>{{ allow-redist-default-route }}</allow-redist-default-route>
            <reject-default-route>{{ reject-default-route }}</reject-default-route>
            <rfc1583>{{ rfc1583 }}</rfc1583>
            <graceful-restart/>
            <auth-profile>
              <entry name="{{ auth-profile-name }}">
                <password>{{ auth-passwd }}</password>
              </entry>
            </auth-profile>
            <area>
              <entry name="{{ area-id }}">
                <type>
                  <{{ area-type }}/>
                </type>
                <interface>
                  <entry name="[[ area-type }}">
                    <enable>{{ interface-enable }}</enable>
                    <passive>{{ interface-passive-mode }}</passive>
                  </entry>
                </interface>
                <range>
                  <entry name="{{ ip-summary-range }}"/>
                </range>
              </entry>
            </area>
          </ospf>
        </protocol>
      </entry>